# MS Word documents
application/msword; /usr/bin/open %s

# Images
image/jpg; /usr/bin/open %s
image/jpeg; /usr/bin/open %s
image/pjpeg; /usr/bin/open %s
image/png; /usr/bin/open %s
image/gif; /usr/bin/open %s

# PDFs
application/pdf; /usr/bin/open %s

# HTML
text/html; w3m -I %{charset} -T text/html; copiousoutput;

# Unidentified files
application/octet-stream; /usr/bin/open %s

