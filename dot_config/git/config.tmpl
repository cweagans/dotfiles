[advice]
addEmptyPathspec = false
statusHints = false

[apply]
whitespace = nowarn

[branch]
autosetuprebase = always[github]
user = {{ .github_username }}

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
frag = magenta
meta = yellow
new = green
old = red
whitespace = white reverse

[color "interactive"]
error = red bold

[color "status"]
added = yellow
branch = magenta
changed = green
untracked = cyan

[commit]
gpgsign = true

[core]
ignorecase = false
compression = 9
excludesfile = {{ .chezmoi.homeDir }}/.config/git/ignore
pager = less -FRSX
whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

{{- $ghPath := lookPath "gh" }}
{{- if $ghPath }}
[credential "https://github.com"]
	helper = !{{ $ghPath }} auth git-credential
[credential "https://gist.github.com"]
	helper = !{{ $ghPath }} auth git-credential
{{- end }}

[diff]
algorithm = patience
tool = default-difftool

[ghq]
root = {{ .chezmoi.homeDir }}/Code

[ghq "gitea.internal.cweagans.net"]
vcs = git

[gitflow "branch"]
master = main
develop = develop

[gitflow "prefix"]
feature = feature-
release = release-
hotfix = hotfix-
support = support-
versiontag = v

[gpg]
format = ssh

[gpg "ssh"]
allowedSignersFile = {{ .chezmoi.homeDir }}/.ssh/allowed_signers

[init]
defaultBranch = main

[push]
default = current

[rebase]
autostash = true

[tag]
gpgsign = true

