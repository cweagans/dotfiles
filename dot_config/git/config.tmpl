[advice]
addEmptyPathspec = false
statusHints = false

[apply]
whitespace = nowarn

[alias]
cs = commit -s
tag = tag -s

[branch]
autoSetupRebase = always
sort = -committerdate

[color]
ui = auto

[color "branch"]
current = cyan bold reverse
local = white
plain =
remote = cyan

[color "diff"]
commit =
func = cyan
plain =
whitespace = magenta reverse
meta = white
frag = cyan bold reverse
old = red
new = green

[color "grep"]
context =
filename =
function =
linenumber = white
match =
selected =
separator =

[color "interactive"]
error =
header =
help =
prompt =

[color "status"]
added = green
changed = yellow
header =
localBranch =
nobranch =
remoteBranch = cyan bold
unmerged = magenta bold reverse
untracked = red
updated = green bold

[commit]
cleanup = scissors
gpgsign = true
verbose = true

[core]
compression = 9
ignorecase = false
pager = delta
whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

{{- $ghPath := lookPath "gh" }}
{{- if $ghPath }}
[credential "https://github.com"]
	helper = !{{ $ghPath }} auth git-credential
[credential "https://gist.github.com"]
	helper = !{{ $ghPath }} auth git-credential
{{- end }}

[delta]
features = unobtrusive-line-numbers catppuccin-mocha
navigate = true
side-by-side = true
syntax-theme = Catppuccin-mocha

[delta "catppuccin-mocha"]
	blame-palette = "#1e1e2e #181825 #11111b #313244 #45475a"
	commit-decoration-style = "box ul"
	dark = true
	file-decoration-style = "#cdd6f4"
	file-style = "#cdd6f4"
	hunk-header-decoration-style = "box ul"
	hunk-header-file-style = "bold"
	hunk-header-line-number-style = "bold #a6adc8"
	hunk-header-style = "file line-number syntax"
	line-numbers = true
	line-numbers-left-style = "#6c7086"
	line-numbers-minus-style = "bold #f38ba8"
	line-numbers-plus-style = "bold #a6e3a1"
	line-numbers-right-style = "#6c7086"
	line-numbers-zero-style = "#6c7086"
	# 25% red 75% base
	minus-emph-style = "bold syntax #53394c"
	# 10% red 90% base
	minus-style = "syntax #35293b"
	# 25% green 75% base
	plus-emph-style = "bold syntax #40504b"
	# 10% green 90% base
	plus-style = "syntax #2c333a"
	map-styles = \
		bold purple => syntax "#494060", \
		bold blue => syntax "#394361", \
		bold cyan => syntax "#384d5e", \
		bold yellow => syntax "#544f4e"
	# Should match the name of the bat theme
	syntax-theme = "Catppuccin Mocha"

[diff]
algorithm = histogram
context = 10
colorMoved = default
colorMovedWS = allow-indentation-change

[fetch]
fsckobjects = true
prune = true
prunetags = true

[ghq]
root = {{ .chezmoi.homeDir }}/Developer

[ghq "gitea.internal.cweagans.net"]
vcs = git

[gitflow "branch"]
master = main
develop = develop

[gitflow "prefix"]
feature = feature-
hotfix = hotfix-
release = release-
support = support-
versiontag = v

[github]
user = {{ .github_username }}

[gpg]
format = ssh

[gpg "ssh"]
allowedSignersFile = {{ .chezmoi.homeDir }}/.ssh/allowed_signers
program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[log]
date = iso

[merge]
conflictstyle = zdiff3
keepbackup = false

[pager]
branch = false
grep = false

[pull]
rebase = true

[push]
default = current
followTags = true

[rebase]
autostash = true
missingCommitsCheck = error

[receive]
fsckobjects = true

[rerere]
enabled = true

[status]
submoduleSummary = true

[transfer]
fsckobjects = true

[tag]
gpgsign = true

{{ if eq .mode "personal" }}
[url "ssh://git@gitea.internal.cweagans.net:2222"]
insteadOf = https://gitea.internal.cweagans.net
{{ end }}
{{ if eq .mode "work" }}
[url "git@github.com:hashgraph"]
insteadOf = https://github.com/hashgraph
[url "git@github.com:swirlds"]
insteadOf = https://github.com/swirlds
