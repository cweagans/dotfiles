[advice]
addEmptyPathspec = false
statusHints = false

[apply]
whitespace = nowarn

[branch]
autoSetupRebase = always

[github]
user = {{ .github_username }}

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
frag = magenta
meta = yellow
new = green
old = red
whitespace = white reverse

[color "interactive"]
error = red bold

[color "status"]
added = yellow
branch = magenta
changed = green
untracked = cyan

[commit]
gpgsign = true

[core]
compression = 9
ignorecase = false
pager = delta
whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

{{- $ghPath := lookPath "gh" }}
{{- if $ghPath }}
[credential "https://github.com"]
	helper = !{{ $ghPath }} auth git-credential
[credential "https://gist.github.com"]
	helper = !{{ $ghPath }} auth git-credential
{{- end }}

[delta]
features = unobtrusive-line-numbers my-nord
navigate = true
side-by-side = true

[delta "my-nord"]
blame-palette = "#2E3440" "#3B4252" "#434C5E" "#4C566A"
blame-format = "{timestamp:<15} {author:<15.14} {commit:<8} "
blame-separator-format = "│ {n:>4} │"
dark = true
hunk-header-style = omit
hyperlinks = true
line-numbers = true
line-numbers-left-format = " {nm:>4} │"
line-numbers-right-format = " {np:>4} │"
syntax-theme = Nord
zero-style = dim syntax

[diff]
algorithm = histogram
colorMoved = default

[fetch]
fsckobjects = false
prune = true

[ghq]
root = {{ .chezmoi.homeDir }}/Developer

[ghq "gitea.internal.cweagans.net"]
vcs = git

[gitflow "branch"]
master = main
develop = develop

[gitflow "prefix"]
feature = feature-
hotfix = hotfix-
release = release-
support = support-
versiontag = v

[gpg]
format = ssh

[gpg "ssh"]
allowedSignersFile = {{ .chezmoi.homeDir }}/.ssh/allowed_signers

[init]
defaultBranch = main

[interactive]
diffFilter = delta --color-only

[merge]
conflictstyle = diff3

[pager]
branch = false
grep = false

[push]
default = current

[rebase]
autostash = true

[receive]
fsckobjects = true

[status]
submoduleSummary = true

[transfer]
fsckobjects = true

[tag]
gpgsign = true

{{ if eq .mode "personal" }}
[url "ssh://git@gitea.internal.cweagans.net:2222"]
insteadOf = https://gitea.internal.cweagans.net
{{ end }}
{{ if eq .mode "work" }}
[url "git@github.com:hashgraph"]
insteadOf = https://github.com/hashgraph
[url "git@github.com:swirlds"]
insteadOf = https://github.com/swirlds
[url "git@github.com:swirldslabs"]
insteadOf = https://github.com/swirldslabs
{{ end }}

