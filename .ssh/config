# # vi:syntax=sshconfig

Host codeserver.*.*.drush.in
	StrictHostKeyChecking no
	ControlMaster no

Host *
	# Speed up reconnects.
	ControlPath ~/.ssh/control/%r@%h:%p
	ControlMaster auto
	ControlPersist 4h
	# Keep connections alive
	TCPKeepAlive yes
	ServerAliveInterval 15
	ServerAliveCountMax 3
	GSSAPIAuthentication no
	AddKeysToAgent yes

