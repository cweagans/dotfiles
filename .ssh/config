# # vi:syntax=sshconfig

Host drush.in
	ControlMaster no

Host *
	# Speed up reconnects.
	#ControlPath ~/.ssh/control/%r@%h:%p
	#ControlMaster auto
	ControlPersist 4h
	# Keep connections alive
	TCPKeepAlive yes
	ServerAliveInterval 15
	ServerAliveCountMax 3
	# TODO: Compression needed?
	#Compression yes
	#CompressionLevel 9
	# not using kerberos, so disable to speed up login.
	GSSAPIAuthentication no

Host codeserver.*.*.drush.in
	StrictHostKeyChecking no
