# # vi:syntax=sshconfig

# # Match keyword and custom script solves SSH issue on network.
# # Match host * exec "ping -t 1 -c 1 OBFUSCATED_IP"
# #   ProxyCommand corkscrew proxy.example.com 80 %h %p
# #   ServerAliveInterval 5
# #   ControlPath ~/.ssh/control-%r
# #   ControlMaster auto

Host *
	# Speed up reconnects.
	ControlPath ~/.ssh/control/%r@%h:%p
	ControlMaster auto
	ControlPersist 4h
	# Keep connections alive
	TCPKeepAlive yes
	ServerAliveInterval 15
	ServerAliveCountMax 3
	# TODO: Compression needed?
	#Compression yes
	#CompressionLevel 9
	# not using kerberos, so disable to speed up login.
	GSSAPIAuthentication no

Host nasa.bastionpub
	Hostname bastion.pubvpc.nasawestprime.com
	ForwardAgent yes

Host nasa.bastionpriv
	Hostname bastion.priv.nasawestprime.com
	ForwardAgent yes

Host nasa.cms-dev
	Hostname www-app-1-dev-pubvpc.nasawestprime.com
	#ProxyJump nasa.bastionpub
	ForwardAgent yes
	User cweagans

Host nasa.bastion*
	Port 443
	ForwardAgent yes

Host nasa.*
	User ceagans
	ForwardAgent yes

Host nasa.daas3-hostmaster
	Hostname 138.76.44.76
	User ubuntu
	#ProxyJump nasa.bastionpriv
	IdentityFile /home/cweagans/Code/daas-infrastructure/terraform/modules/tier_web/ssh/provisioner

Host cweagans.web web
	Hostname web.cweagans.net
	User root

Host cweagans.util util
	Hostname util.cweagans.net
	User root
