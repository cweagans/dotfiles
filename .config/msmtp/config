defaults
logfile ~/Mail/msmtp.log
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account Gmail
  host smtp.gmail.com
  port 587
  tls on
  protocol smtp
  auth on
  from cweagans@gmail.com
  user cweagans@gmail.com
  passwordeval "~/.config/offlineimap/offlineimap.py Gmail"

