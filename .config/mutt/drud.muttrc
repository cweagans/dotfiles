set from = "ceagans@drud.com"
set sendmail = "msmtp -a Drud"
set postponed = "+Drud/Drafts"
set mbox = "+Drud/[Gmail].All Mail"
set trash = "+Drud/[Gmail].Trash"
set signature = "~/.config/mutt/plain.sig"

macro index,pager a "<save-message>=Drud/[Gmail].All<tab><enter>"
macro index,pager A "<tag-prefix><save-message>=Drud/[Gmail].All<tab><enter>"

# Gmail automatically saves a copy of sent messages that come through SMTP,
# so we don't need Mutt to handle this for us.
set copy=no
unset record
