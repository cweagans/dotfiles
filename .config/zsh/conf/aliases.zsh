# Reload zsh configuration.
alias reload!='. ~/.zshrc'

# Use k for all the things.
alias ls='k -A -h'
alias ll='ls'

# Never actually delete anything. Move it to the Trash first.
alias gnurm='/usr/bin/rm'
alias rm='trash'

# Drud stuff
alias dddev="~/Code/go/src/github.com/drud/ddev/bin/linux/ddev"
