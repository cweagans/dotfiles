[general]
ui = ttyui
accounts = Gmail,Personal,BWS,Drud,Eagansfoundation
pythonfile = ~/.config/offlineimap/offlineimap.py
fsync = False

[mbnames]
enabled = yes
filename = ~/.config/mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"


[Account Gmail]
localrepository = Gmail-Local
remoterepository = Gmail-Remote
postsynchook = ~/.config/offlineimap/post-sync.sh Gmail

[Repository Gmail-Local]
type = GmailMaildir
localfolders = ~/Mail/Gmail

[Repository Gmail-Remote]
type = Gmail
remoteuser = cweagans@gmail.com
remotepasseval = get_password('Gmail')
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
maxconnections = 3
folderfilter = lambda folder: folder not in ['[Gmail].Trash', '[Gmail].Spam']


[Account Personal]
localrepository = Personal-Local
remoterepository = Personal-Remote
postsynchook = ~/.config/offlineimap/post-sync.sh Personal

[Repository Personal-Local]
type = Maildir
localfolders = ~/Mail/Personal

[Repository Personal-Remote]
type = IMAP
remotehost = imap.migadu.com
remoteport = 993
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = me@cweagans.net
remotepasseval = get_password('Personal')
maxconnections = 1
folderfilter = lambda folder: folder not in ['Trash', 'Junk']


