[general]
ui = ttyui
accounts = Personal,Mobomo,Nasa
pythonfile = ~/.offlineimap.py
fsync = False

[Account Personal]
localrepository = Personal-Local
remoterepository = Personal-Remote
postsynchook = notmuch new

[Repository Personal-Local]
type = Maildir
localfolders = ~/Mail/Personal

[Repository Personal-Remote]
type = IMAP
remotehost = imap.fastmail.com
remoteport = 993
ssl = yes
holdconnectionopen = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = cweagans@fastmail.com
remoteusereval = get_username('Personal')
remotepasseval = get_password('Personal')
folderfilter = lambda folder: folder not in ['INBOX.Trash', 'INBOX.Junk Mail']

[Account Gmail]
localrepository = Gmail-Local
remoterepository = Gmail-Remote
postsynchook = notmuch new

[Repository Gmail-Remote]
type = Gmail
auth_mechanisms = LOGIN
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteusereval = get_username('Gmail')
remotepasseval = get_password('Gmail')
folderfilter = lambda folder: folder not in ['INBOX.Trash', 'INBOX.Junk Mail']

[Repository Gmail-Local]
type = Maildir
localfolders = ~/Mail/Gmail

[Account Mobomo]
localrepository = Mobomo-Local
